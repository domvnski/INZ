<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewPersonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_save_black_24dp" />

        <TextView
            android:id="@+id/textViewPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imageViewPersonIcon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Imie + Nazwisko"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/imageViewPhoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_phone"
            android:layout_toStartOf="@id/imageViewTextIcon"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/imageViewTextIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_textsms"
            android:layout_alignParentEnd="true"/>
        <!--        <TextView-->
        <!--            android:id="@+id/textViewAge"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="19 lat"-->
        <!--            android:layout_below="@id/textViewPersonName"-->
        <!--            android:layout_alignStart="@id/textViewPersonName"-->
        <!--            />-->


    </RelativeLayout>


</androidx.cardview.widget.CardView>